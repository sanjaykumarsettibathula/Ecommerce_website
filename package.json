{
  "name": "ecommerce-pro",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:client-only": "cd client && npm run build",
    "build:server-only": "cd server && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "check": "npm run check:client && npm run check:server",
    "check:client": "cd client && npm run type-check",
    "check:server": "cd server && npm run check",
    "db:push": "cd server && npm run db:push",
    "db:generate": "cd server && npm run db:generate",
    "db:migrate": "cd server && npm run db:migrate",
    "db:studio": "cd server && npm run db:studio",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "deploy:vercel": "vercel --prod",
    "deploy:render": "render deploy"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "concurrently": "^8.2.2"
  }
}
